{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C++: build all files in folder",
			"command": "/usr/bin/c++",
			"args": [
				"-std=c++98",
				"-Werror",
				"-Wextra",
				"-Wall",
				"-fdiagnostics-color=always",
				"-g",
				"${fileDirname}/*.cpp ${fileDirname}/*.hpp",
				"-o",
				"${fileDirname}/a.out"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem"
			},
			"detail": "maplepy: compile all files in folder with /usr/bin/c++",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "C++: run compiled program from folder",
			"command": "${fileDirname}/a.out",
			"problemMatcher": [],
			"dependsOn": "C++: build all files in folder",
			"group": {
				"kind": "test",
				"isDefault": false
			},
			"presentation": {
				"clear": true,
				"focus": true
			},
			"detail": "maplepy: execute C++ program"
		},
		{
			"type": "process",
			"label": "C++: make run",
			"command": "make",
			"args": [
				"run"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"detail": "maplepy: compile the project with the makefile and run it",
			"problemMatcher": []
		},
		{
			"type": "process",
			"label": "C++: make valgrind",
			"command": "make",
			"args": [
				"valgrind"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"group": {
				"kind": "test",
				"isDefault": false
			},
			"detail": "maplepy: compile the project with the makefile and run it with valgrind"
		}
	]
}
